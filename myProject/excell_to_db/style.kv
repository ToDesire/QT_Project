
<AlertPopup@Popup>
    auto_dismiss:False
    size_hint: .5,.4
    pos_hint: {'center_x': .5,'center_y': .5}
    title:"Inappropriate file extension"
    BoxLayout:
        orientation: 'vertical'
        size:root.width, root.height
        padding:10

        Label:
            text: "Please enter an appropriate file(.xsl,.csv,.xml,.json)"
            size_hint: (1,.9)
        Button:
            text:"OK"
            size_hint: (.3,.1)
            pos_hint: {'center_x': .8}
            background_normal:''
            background_color:(100/255,100/255,100/255,1)
            color: (0,0,0,1)
            on_release: root.dismiss()
<MyLayout>
    id:importTab
    BoxLayout:
        padding:5
        orientation: 'vertical'
        size: root.width, root.height
        # GridLayout:
        #     cols:1
        #     rows:2
        TextInput:
            multiline:False
            id:path
            font_size:22
            size_hint: (.8,.1)
            pos_hint: {'center_x': .5} 
        BoxLayout:
            padding:5
            orientation: 'vertical'
            FileChooserListView:
                id:file
                size_hint: (1,.8)
                on_selection:importTab.selected(file.selection)
                on_submit: importTab.submited(file.selection)
                path:'../../'

            Button:
                padding:(10,10)
                text:"Format"
                size_hint: (.3,.2)
                font_size: 32
                pos_hint: {'center_x': .5, 'center_y':.5}
                on_press: root.formatFile(file.selection)